# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript / JavaScript / JSX / TSX
[*.{js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 2

# HTML
[*.{html,htm}]
indent_style = space
indent_size = 2

# CSS / SCSS / LESS
[*.{css,scss,less}]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# Python (保持与项目后端一致)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Makefile
[Makefile]
indent_style = tab
